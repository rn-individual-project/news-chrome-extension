{
  "name": "Fake News Detector",
  "version": "1.0",
  "description": "Chrome extension to detect political bias.",
  "permissions": ["activeTab" ,"declarativeContent" ,"storage", "contextMenus", "http://ff12df23-38aa-4eea-86f1-11896fecbc85.uksouth.azurecontainer.io/score", "tabs", "background", "notifications"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Test Extension",
    "default_popup": "src/popup.html"
  },
  "web_accessible_resources": [
    "src/model/*"
  ],
  "content_scripts": [{
    "js": ["src/content.js"],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "manifest_version": 2
}